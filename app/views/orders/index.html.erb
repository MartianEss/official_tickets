<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number_of_tickets) %></th>
      <th><%= model_class.human_attribute_name(:event) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <% event = order.tickets_allocation.event %>
      <tr>
        <td><%= link_to order.id, event_ticket_order_path(id: order.id, event_id: event.id, ticket_id: order.tickets_allocation.id) %></td>
        <td><%= order.number_of_tickets %></td>
        <td><%= event.title %> - <%= event.location %></td>
        <td><%=l order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
