<%- model_class = Ticket -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:serial) %></th>
      <th><%= model_class.human_attribute_name(:ticket_purchaser) %></th>
      <th><%= model_class.human_attribute_name(:ordered_for) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
<%- model_class = Event -%>
      <th><%= model_class.human_attribute_name(:event) %></th>
      <th>Purchased at</th>
      <th><%= model_class.human_attribute_name(:used) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.serial %></td>
        <td><%= ticket.ticket_purchaser.full_name %></td>
        <td><%= ticket.ordered_for %></td>
        <td>Â£<%= ticket.price %></td>
        <td><%= event.title %> - <%= event.location %></td>
        <td><%=l ticket.created_at %></td>
        <td><%= ticket.used? %></td>
        <td>
          <% unless ticket.used %>
            <%= link_to 'TIcket Used',
              used_event_managers_event_tickets_allocation_ticket_path(event_id: @event.id, tickets_allocation_id: @tickets_allocation.id, ticket_id: ticket.id),
              :method => :post,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
