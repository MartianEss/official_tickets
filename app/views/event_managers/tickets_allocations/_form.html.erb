<%= simple_form_for @tickets_allocation, url: { controller: :tickets_allocations, action: (action_name == 'new') ? :create : :update }, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= error_span(@tickets_allocation[:name]) %>
  <%= f.input :price %>
  <%= error_span(@tickets_allocation[:price]) %>
  <%= f.input :allocated %>
  <%= error_span(@tickets_allocation[:allocated]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                event_managers_events_path, :class => 'btn btn-default' %>
<% end %>
