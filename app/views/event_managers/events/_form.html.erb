<%= simple_form_for @event, url: { controller: :events, action: (action_name == 'new') ? :create : :update }, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :title %>
  <%= error_span(@event[:title]) %>
  <%= f.input :description %>
  <%= error_span(@event[:description]) %>
  <%= f.input :dress_code_id, collection: DressCode.all, prompt: 'Select dress code' %>
  <%= error_span(@event[:dress_code_id]) %>
  <%= f.input :venue %>
  <%= error_span(@event[:venue]) %>
  <%= f.input :address_line1 %>
  <%= error_span(@event[:address_line1]) %>
  <%= f.input :address_line2 %>
  <%= error_span(@event[:address_line2]) %>
  <%= f.input :town_city %>
  <%= error_span(@event[:town_city]) %>
  <%= f.input :post_code %>
  <%= error_span(@event[:post_code]) %>
  <%= f.input :genre_id, collection: Genre.all, prompt: 'Select the Genre' %>
  <%= error_span(@event[:genre_id]) %>
  <%= f.input :event_type_id, collection: EventType.all, prompt: 'Select the event type' %>
  <%= error_span(@event[:event_type_id]) %>
  <%= f.input :date_from %>
  <%= error_span(@event[:date_from]) %>
  <%= f.input :date_to %>
  <%= error_span(@event[:date_to]) %>
  <%= f.input :time_to %>
  <%= error_span(@event[:time_to]) %>
  <%= f.input :time_from %>
  <%= error_span(@event[:time_from]) %>
  <%= f.input :contact_number %>
  <%= error_span(@event[:contact_number]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                event_managers_events_path, :class => 'btn btn-default' %>
<% end %>
